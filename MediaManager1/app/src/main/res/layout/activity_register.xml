<?xml version="1.0" encoding="utf-8"?>

<layout>

    <RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@drawable/securityimage">

        <TextView
            android:id="@+id/tv1_register"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Media Gallery"
            android:padding="100dp"
            android:textSize="40dp"
            android:textColor="@color/colorWhile"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/tv1_hinht_pass"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nhập mật khẩu là 6 ký tự số"
            android:layout_below="@+id/tv1_register"
            android:textSize="13dp"
            android:layout_centerHorizontal="true"
            android:textColor="@color/colorWhile"/>

        <EditText
            android:background="#2FB6F5"
            android:gravity="center"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/tv1_hinht_pass"
            android:maxLength="6"
            android:password="true"
            android:inputType="number"
            android:paddingTop="10dp"
             android:id="@+id/edt_password"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:paddingLeft="10dp"
            android:textSize="20dp"/>

        <TextView
            android:id="@+id/tv1_hinht_againpass"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nhập lại mật khẩu"
            android:layout_below="@+id/edt_password"
            android:textSize="13dp"
            android:layout_centerHorizontal="true"
            android:textColor="@color/colorWhile"/>

        <EditText
            android:background="#2FB6F5"
            android:gravity="center"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/tv1_hinht_againpass"
            android:maxLength="6"
            android:password="true"
            android:inputType="number"
            android:paddingTop="10dp"
            android:id="@+id/edt_again_password"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:paddingLeft="10dp"
            android:textSize="20dp"/>

        <EditText
            android:inputType="textEmailAddress"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/edt_again_password"
            android:paddingTop="10dp"
            android:id="@+id/edt_email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:hint="Email"
            android:paddingLeft="10dp"/>


        <Button
            android:background="#0A7FB6"
            android:textColor="@color/colorWhile"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/edt_email"
            android:id="@+id/btn_register"
            android:layout_marginTop="20dp"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:text="Register"/>

        <Button
            android:background="#0A7FB6"
            android:textColor="@color/colorWhile"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/btn_register"
            android:id="@+id/btn_not_register"
            android:layout_marginTop="10dp"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:text="Not Register"/>




    </RelativeLayout>

</layout>

